{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "outDir": "out/src",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strictNullChecks": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules",
        "tests",
        ".vscode-test"
    ]
}